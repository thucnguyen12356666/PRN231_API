@model SCBS.Repositories.Models.Service

@{
    ViewData["Title"] = "Delete Service";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center">
            <h2><i class="fas fa-trash-alt"></i> Delete Service</h2>
        </div>
        <div class="card-body">
            <h4 class="text-center text-danger">Are you sure you want to delete this service?</h4>
            <hr>
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3 text-muted"><i class="fas fa-tag"></i> Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3 text-muted"><i class="fas fa-info-circle"></i> Description</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3 text-muted"><i class="fas fa-dollar-sign"></i> Price</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Price) USD</dd>

                        <dt class="col-sm-3 text-muted"><i class="fas fa-clock"></i> Duration</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Duration) minutes</dd>

                        <dt class="col-sm-3 text-muted"><i class="fas fa-star"></i> Rating</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Rating) / 5</dd>

                        <dt class="col-sm-3 text-muted"><i class="fas fa-toggle-on"></i> Status</dt>
                        @{
                            bool isActive = Model.Status.ToString().ToLower() == "true";
                        }
                        <span class="badge bg-@(isActive ? "success" : "secondary")">
                            @(isActive ? "Active" : "Inactive")
                        </span>


                        <dt class="col-sm-3 text-muted"><i class="fas fa-calendar-plus"></i> Created At</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

                        <dt class="col-sm-3 text-muted"><i class="fas fa-calendar-check"></i> Updated At</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedAt)</dd>

                        <dt class="col-sm-3 text-muted"><i class="fas fa-user"></i> User</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Email)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fas fa-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>

<!-- Add FontAwesome Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
